@model SQH.Entities.Models.Projeto.ProjetoModel

<table class="table table-striped table-bordered" cellspacing="0">
    <thead>
        <tr>
            <th>Tipo de Alocação</th>
            <th>Período Inicial</th>
            <th>Período Final</th>
            <th class="text-center">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Alocacoes)
        {
            <tr>
                <td>
                    <span class="tipoAlocacao">@item.TipoAlocacao</span>
                    <input class="idTipoAlocacao" type="hidden" asp-for="@item.IdTipoAlocacao" />
                    <input class="idAlocacao" type="hidden" asp-for="@item.IdAlocacao" />
                </td>
                <td>
                    <span class="dataInicio"> @item.DataInicio.ToShortDateString()</span>
                </td>
                <td>
                    <span class="dataFim"> @item.DataFim.ToShortDateString() </span>
                </td>
                <td class="text-center">
                    <a href="#" title="Editar Período" class="lnkEditarPeriodo">
                        <i class="glyphicon glyphicon-pencil"></i>
                    </a>
                    <a href="#" title="Editar Recursos">
                        <i class="glyphicon glyphicon-edit"></i>
                    </a>
                    <a asp-action="Delete" asp-controller="Alocacao" asp-route-id="@item.IdAlocacao" asp-route-idProjeto="@item.IdProjeto" title="Remover Alocação">
                        <i class="glyphicon glyphicon-trash"></i>
                    </a>

                    <a href="javscript:;" data-toggle="modal" data-target="#@item.IdAlocacao" title="Deletar">
                        <i class="glyphicon glyphicon-trash"></i>
                    </a>

                    @Html.Partial("_Modal", new DeletarViewModel()
               {
                   Id = item.IdAlocacao,
                   Nome = item.TipoAlocacao,
                   Controller = "Alocacao",
                   Redirecionar = item.IdProjeto.ToString()
               })
                </td>
            </tr>
        }
    </tbody>
</table>