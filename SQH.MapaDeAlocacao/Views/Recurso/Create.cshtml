@{
    ViewData["Title"] = "Incluir Recurso";
}

@model SQH.Entities.Models.Recurso.RecursoModel


<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="well well-sm">
                <form id="formCreateRecurso" method="post">
                    <div class="form-group">
                        <label asp-for="Nome"></label>
                        <input asp-for="Nome" type="text" class="form-control" maxlength="150" />
                        <span asp-validation-for="Nome"></span>
                    </div>

                    <input type="hidden" asp-for="Id" />

                    <div>
                        <button type="button" class="btn btn-default">Cancelar</button>
                        <button type="submit" class="btn btn-primary">Salvar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/app/js/Recurso/CreateRecurso.js"></script>
}