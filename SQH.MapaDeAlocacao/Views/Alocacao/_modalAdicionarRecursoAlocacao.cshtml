
@model SQH.Entities.Models.Alocacao.AlocacaoRecursoModel

<div class="modal bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" id="modalSalvarRecursoAlocacao">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="exampleModalLabel">Salvar Alocação</h4>
            </div>
            <div class="modal-body">
                <form id="formSalvarRecursoAlocacao" asp-action="Incluir" asp-controller="AlocacaoRecurso" class="form-horizontal" method="post">
                    <input type="hidden" id="idAlocacaoRecurso" asp-for="IdAlocacao" />
                    <input type="hidden" id="idProjetoAlocacaoRecurso" asp-for="IdProjeto" />

                    <div class="form-group">
                        <label asp-for="Recurso" class="col-md-2 control-label"></label>
                        <div class="col-md-9">
                            <input asp-for="Recurso" data-min-caracteres="2" data-url-dados="@Url.Action("ObtemAutoCompleteRecurso", "Recurso")" data-id-value="IdRecurso" type="text" class="form-control autocomplete" />
                            <span asp-validation-for="Recurso" class="text-danger"></span>
                            <input type="hidden" asp-for="IdRecurso" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="DataInicio" class="col-md-2 control-label"></label>
                        <div class="col-md-9">
                            <input asp-for="DataInicio" type="text" class="form-control data" />
                            <span asp-validation-for="DataInicio" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="DataFim" class="col-md-2 control-label"></label>
                        <div class="col-md-9">
                            <input asp-for="DataFim" type="text" class="form-control data" />
                            <span asp-validation-for="DataFim" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary">Salvar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>